<h1>Listing products</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Camera type</th>
    <th>Colour</th>
    <th>Brand</th>
    <th>Lcd screen size</th>
    <th>Megapixel range</th>
    <th>Model code</th>
    <th>Model description</th>
    <th>Optical zoom</th>
    <th>Retail price</th>
    <th>Price</th>
    <th>Product image</th>
    <th>Model text</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.id %></td>
    <td><%= product.camera_type %></td>
    <td><%= product.colour %></td>
    <td><%= product.brand %></td>
    <td><%= product.LCD_screen_size %></td>
    <td><%= product.megapixel_range %></td>
    <td><%= product.model_code %></td>
    <td><%= product.model_description %></td>
    <td><%= product.optical_zoom %></td>
    <td><%= product.retail_price %></td>
    <td><%= product.price %></td>
    <td><%= product.product_image %></td>
    <td><%= product.model_text %></td>
    <td><%= product.category %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

